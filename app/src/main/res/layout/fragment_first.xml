    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/segment"
        android:layout_marginTop="5dp"
        android:id="@+id/segment_options">
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ctv_personal"
            android:text="@string/sf_currency"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:gravity="center_vertical"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ctv_business"
            android:text="@string/sf_saturday"
            android:button="@null"
            android:gravity="center_vertical"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accessibility"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@id/segment_options"
        android:layout_marginTop="10dp"/>
    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acc_wheel"
        android:text="@string/acc_wheel_chair"
        android:button="@null"
        android:gravity="center_vertical"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:layout_marginTop="5dp"
        android:layout_below="@id/access"/>
    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"/>
